<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartbingari.tarabastate.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Overview"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/overview"
                android:onClick="overview"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="History"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/history"
                android:onClick="history"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Governments"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/gov"
                android:onClick="gov"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Geography"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/geography"
                android:onClick="geo"
                android:textSize="10sp"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Tourist and Attraction"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/tourist"
                android:onClick="tourist"
                android:textSize="10sp"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Culture"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/culture"
                android:onClick="culture"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Agriculture"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/agric"
                android:onClick="agric"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Useful Sites"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/websites"
                android:onClick="sites"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="News"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/news"
                android:onClick="news"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Map"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/map"
                android:onClick="maps"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Schools"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/education"
                android:onClick="schools"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Photo Gallery"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/photos"
                android:onClick="photos"
                android:textSize="10sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Hotels"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/hotels"
                android:onClick="hotels"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="LGAs"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/lga"
                android:onClick="lga"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Jobs"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/job"
                android:onClick="jobs"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20sp">
            <Button
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Events"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/event"
                android:onClick="events"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Chat Rooms"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/chat"
                android:onClick="chat"
                android:textSize="10sp"/>
            <Button
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="About"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/about"
                android:onClick="about"
                android:textSize="10sp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
